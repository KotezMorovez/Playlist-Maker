<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/block_height"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlistCoverImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/placeholder_album" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/margin_2x"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistNameTextView"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TEST1234567890123456789012345678901234567890" />

        <TextView
            android:id="@+id/tracksCountTextView"
            style="@style/TextBodySecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TEST12345678901234567890123456789012345678901234567890" />
    </LinearLayout>
</LinearLayout>