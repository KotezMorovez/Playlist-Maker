<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/block_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trackImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_library"
        tools:tint="@color/yp_blue"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/margin_2x"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackNameTextView"
            style="@style/text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/long_text_test" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistNameTextView"
                style="@style/text_body_secondary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="@string/long_text_test" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dot"
                style="@style/text_body_secondary"/>

            <TextView
                android:id="@+id/trackTimeTextView"
                style="@style/text_body_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_arrow_forward" />
</LinearLayout>