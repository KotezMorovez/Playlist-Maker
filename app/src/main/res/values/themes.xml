<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorPrimaryDark">@color/yp_blue</item>
        <item name="colorAccent">@color/yp_blue</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorOnSurface">@color/yp_blue</item>
        <item name="colorOnSecondary">@color/yp_text_gray</item>

        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Theme.PlaylistMaker.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/yp_blue</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/yp_text_gray</item>
        <item name="colorOutline">@color/yp_light_gray</item>
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryContainer">@color/switch_track</item>
    </style>
</resources>