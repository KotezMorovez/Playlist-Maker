<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_screen">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_2x</item>
        <item name="cornerRadius">@dimen/radius_4x</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="toolbar">
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="settings_body">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="search_edit_text">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="search_clear_button">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_cross</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="navigation_button_inactive">
        <item name="android:tint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="navigation_button_active">
        <item name="android:tint">@color/yp_blue</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>