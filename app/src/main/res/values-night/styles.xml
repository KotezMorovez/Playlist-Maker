<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreen">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_2x</item>
        <item name="cornerRadius">@dimen/radius_4x</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Toolbar">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextHeader">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextBodySecondary">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/subtext_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="tint">@color/yp_white</item>
    </style>

    <style name="PlayerTextBody">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textCursorDrawable">@drawable/ic_edittext_cursor</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="SearchClearButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_cross</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="SearchIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="navigation_button_inactive">
        <item name="android:tint">@color/yp_text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchPlaceholder">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="PlayerTextInfo">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>