<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreen">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_2x</item>
        <item name="cornerRadius">@dimen/radius_4x</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Toolbar">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextHeader">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextBodySecondary">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/subtext_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="tint">@color/yp_white</item>
    </style>

    <style name="PlayerTextBody">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textCursorDrawable">@drawable/ic_edittext_cursor</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="SearchClearButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_cross</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="SearchIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="WarningPlaceholder">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallButton">
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="PlayerTextInfo">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabLayout">
        <item name="android:background">@color/yp_black</item>
        <item name="tabTextColor">@color/yp_white</item>
        <item name="tabIndicatorColor">@color/yp_white</item>
    </style>

    <style name="TabLayoutTab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/yp_white</item>
        <item name="android:textSelectHandle">@color/yp_blue</item>
        <item name="android:textSelectHandleLeft">@color/yp_blue</item>
        <item name="android:textSelectHandleRight">@color/yp_blue</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorOnSurface">@color/yp_white</item>
        <item name="colorError">@color/yp_red</item>
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="boxStrokeColor">@color/yp_white</item>
        <item name="boxStrokeErrorColor">@color/yp_red</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
    </style>
</resources>