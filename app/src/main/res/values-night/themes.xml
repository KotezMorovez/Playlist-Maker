<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/yp_black</item>
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorPrimaryDark">@color/yp_black</item>
        <item name="colorAccent">@color/yp_blue</item>
        <item name="colorOnPrimary">@color/yp_white</item>
        <item name="colorOnSecondary">@color/yp_white</item>
        <item name="colorOnSurface">@color/yp_blue</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>